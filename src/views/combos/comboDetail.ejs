<!DOCTYPE html>
<html>
    <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>
    <!----------------------------- IMAGEN E INFORMACIÃ“N ----------------------->
    <main class="product">
        <div class="all">
            <div class="imgCombo">
                <img class="comboImg" src="/uploads/<%=combo.image%>" alt="imagen producto">
                <div class="imgProducts">
                    <% for (let i = 0; i < relations.length; i++){ %>
                        <a href="/products/<%= relations[i].id %>"><img class="productsImg" src="/uploads/<%=relations[i].image%>" alt="imagen producto"></a>
                    <% } %>
                </div>
            </div>
            <div class="infobuy">
                <div class="productInfo">
                    <div class="infobox">
                        <h2 class="beerName"><%= combo.name %></h2>
                        <div class="price-stars">
                            <h3><%= combo.price + "$" %></h3>
                        </div>
                        <div class="separador"></div>
                        <p><%= combo.description %></p>
                        <hr>
                        <p>Contiene :</p>
                        <ul>
                        <% for (let i = 0; i < relations.length; i++){ %>
                                <li><span class="text-wrapper"><%= relations[i].amount %> <%= relations[i].name %><span></li>
                        <% } %>
                        </ul>
                    </div>
                </div>
                <div class="buy">
                    <div class="buybox">
                        <div class="cant">
                            <h3>Cantidad</h3>
                            <div class="input">
                                <button class="menos">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <form>
                                    <input type="number">
                                </form>
                                <button class="mas">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="buybttn">
                            <div class="buybttnBox">
                                <button class="Cart">
                                    <h3>AGREGAR AL CARRITO</h3>
                                </button>
                                <button class="buyNow">
                                <h3>COMPRAR AHORA</h3>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-------------------------------------------------------------------------->
    <%- include('../partials/footer'); %>
</body>
</html>