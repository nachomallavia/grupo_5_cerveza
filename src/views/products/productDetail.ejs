<!DOCTYPE html>
<html>
    <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>
    <!----------------------------- IMAGEN E INFORMACIÃ“N ----------------------->
    <main class="product">
        <div class="all">
            <div class="imgProduct">
                <img class="productImg" src="/uploads/<%=producto.image%>" alt="imagen producto">
            </div>
            <div class="infobuy">
                <div class="productInfo">
                    <div class="infobox">
                        <h2 class="beerName"><%= producto.name %></h2>
                        <div class="price-stars">
                            <h3><%= producto.price + "$" %></h3>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            <h4>(0)</h4>
                        </div>
                        <div class="separador"></div>
                        <p><%= producto.description %></p>
                        <div class= "meter alcohol">
                            <div class= "alcohol text">
                                <h4>Alcohol</h4>
                                <h4 id="percentage-alcohol"><%=producto.abv%>%</h4>
                            </div>
                            <% var abv = (((producto.abv)/14)*100)+"%" %>
                            
                            <div class="bar alcohol"><div id="bar-level-alcohol" style= "width: <%= abv %>"></div></div>
                        </div>
                        <!-- <h3 class="info">ABV: <%= producto.abv %></h3> -->
                        <!-- <h3 class="info">IBU: <%= producto.ibu %></h3> -->
                        <div class= "meter bitternes">
                            <div class="bitternes text">
                                <h4>Amargor</h4>
                                <h4 id="number-bitternes"><%=producto.ibu%></h4>
                            </div>
                            <% var ibu = producto.ibu+"%" %>
                            <div class="bar bitternes"><div id="bar-level-bitternes" style= "width: <%= ibu %>"></div></div>
                        </div>
                        <div class="meter srm">
                            <h4>Tono</h4>
                            <% var color = producto.id_srm %>
                            <% var tono = coloresSrm[color]%>
                            <div class = "srm-circle" id = "color-srm" style = "background-color: <%= tono %> "></div>
                        </div>
                    </div>
                </div>
                <div class="buy">
                    <div class="buybox">
                        <div class="cant">
                            <h3>Cantidad</h3>
                            <div class="input">
                                <button class="menos">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <form>
                                    <input type="number">
                                </form>
                                <button class="mas">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="buybttn">
                            <div class="buybttnBox">
                                <button class="Cart">
                                    <h3>AGREGAR AL CARRITO</h3>
                                </button>
                                <button class="buyNow">
                                <h3>COMPRAR AHORA</h3>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-------------------------------------------------------------------------->
    <%- include('../partials/footer'); %>
</body>
</html>